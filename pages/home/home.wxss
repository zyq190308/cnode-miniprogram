/* pages/home/home.wxss */
.container {
  /* padding-top: 50rpx; */
  overflow: hidden;
}
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  background: #FFFEFE;
}
.top-bar-item {
  flex: 1;
  text-align: center;
  color: #80bd01;
  font-size: 28rpx;
}
.active {
  background-color: #80bd01;
  color: #ffffff;
}


.content {
  margin-top: 60rpx;
  height: 100%;
  overflow: auto;
}

.cell {
  padding: 10rpx;
  border-bottom: 1rpx solid #eeeeee;
  overflow: hidden;
}

.img-style {
  width: 60rpx;
  height: 60rpx;
  border-radius: 6rpx;
  vertical-align: top;
  -webkit-border-radius: 6rpx;
  -moz-border-radius: 6rpx;
  -ms-border-radius: 6rpx;
  -o-border-radius: 6rpx;
}

.type {
  box-sizing: border-box;
  width: 64rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: #ffffff;
  padding: 4rpx 8rpx;
  margin: 0rpx 8rpx;
  border-radius: 8rpx;
  background: #80bd01;
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  -ms-border-radius: 8rpx;
  -o-border-radius: 8rpx;
}

.title {
  display: inline-block;
  width: 480rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.time {
  float: right;
  font-size: 24rpx;
  line-height: 24rpx;
  color: gray;
  margin-top: 20rpx;
  /* line-height: 44rpx; */
}